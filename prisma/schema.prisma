model Logs {
  log_id   BigInt @id @default(autoincrement())
  phoneOrEmail String?
  status String  @default("FAILED")
  createdAt DateTime @default(now())
  companyId  Int
  company Company @relation(fields: [companyId], references: [companyId], onDelete: Cascade)
}